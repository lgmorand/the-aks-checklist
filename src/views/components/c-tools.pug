.c-tools

  .c-button__group
    button.c-button-icon.js-check-all(title="Check all items",data-tippy-content="Check all items",data-tippy-arrow="true")
      +svg-icon.icon.icon-check(data-icon-name='check')

    button.c-button-icon.js-uncheck-all(title="Uncheck all items",data-tippy-content="Uncheck all items",data-tippy-arrow="true")
      +svg-icon.icon.icon-uncheck(data-icon-name='check')

  .c-button__group
    button.c-button-icon.js-expand-all(title=translation.SHOW_DETAILS,data-tippy-content=translation.SHOW_DETAILS,data-tippy-arrow="true")
      +svg-icon.icon2.icon-check(data-icon-name='expand') 

    button.c-button-icon.js-collapse-all(title=translation.SHOW_DETAILS,data-tippy-content=translation.SHOW_DETAILS,data-tippy-arrow="true")
      +svg-icon.icon2.icon-uncheck(data-icon-name='collapse')
